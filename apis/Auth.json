{
  "swagger": "2.0",
  "info": {
    "title": "Authentication",
    "description": "<p>Authentication APIs provides a way to login or logout into YouNeed.</p>"
  },
  "host": "alpha.youneed.it/mobile",
  "basePath": "/v2",
  "schemes": [
    "https"
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending your credentials in request body you will receive, in the response body, an <b>access-token</b> and a <b>refresh-token</b>.<br> The <b>access-token</b> is an expiring JWT to access all the authenticated APIs; once the access-token is expired, it's up to the client to refresh it using the <b>refres-token</b>.</p>",
        "parameters": [
          {
            "in": "body",
            "description": "A JSON object containing your credentials",
            "schema": {
              "type": "object",
              "required": [
                "username",
                "password",
                "application_id",
                "os"
              ],
              "properties": {
                "username": {
                  "description": "Username or email",
                  "type": "string",
                  "example": "m.rossi"
                },
                "password": {
                  "description": "User's password",
                  "type": "string"
                },
                "application_id": {
                  "description": "An identifier for the app",
                  "type": "string",
                  "example": "it.youneed.communicator"
                },
                "os": {
                  "description": "The source's operating system",
                  "type": "string",
                  "enum": [
                    "ANDROID",
                    "iOS"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "access_token",
                "refresh_token"
              ],
              "properties": {
                "access_token": {
                  "description": "Access token",
                  "type": "string"
                },
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden: user exists but is blocked"
          },
          "401": {
            "description": "Unauthorized: user doesn't exists or is not authenticated"
          },
          "400": {
            "description": "Bad Request: one of required params is not provided."
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending a refresh-token, the session and its access token, is deleted.</p>",
        "parameters": [
          {
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "refresh_token"
              ],
              "properties": {
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request: refresh_token is not provided."
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending a valid refresh-token, a new access token is provided. <br>This API let a client to refresh its expiring or expired access-token without having the user to redigits his credetentials.</p>",
        "parameters": [
          {
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "refresh_token"
              ],
              "properties": {
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "access_token"
              ],
              "properties": {
                "access_token": {
                  "description": "Access token",
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: there aren't any active sessions with provided refresh token"
          },
          "400": {
            "description": "Bad Request: refresh_token is not provided."
          }
        }
      }
    }
  }
}