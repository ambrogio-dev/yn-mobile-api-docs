{
  "swagger": "2.0",
  "info": {
    "title": "Authentication",
    "description": "<p>Description TODO</p>"
  },
  "host": "alpha.youneed.it/mobile",
  "basePath": "/v2",
  "schemes": [
    "https"
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending your credentials in request body you will receive, in the response body, an access-token and a refresh-token",
        "parameters": [
          {
            "in": "body",
            "description": "A JSON object containing your credentials",
            "schema": {
              "type": "object",
              "required": [
                "username",
                "password",
                "applicationId"
              ],
              "properties": {
                "username": {
                  "description": "Username or email",
                  "type": "string",
                  "example": "m.rossi"
                },
                "password": {
                  "description": "User's password",
                  "type": "string"
                },
                "applicationId": {
                  "description": "An identifier for the app",
                  "type": "string",
                  "example": "it.youneed.communicator"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "access_token",
                "refresh_token"
              ],
              "properties": {
                "access_token": {
                  "description": "Access token",
                  "type": "string"
                },
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden: user exists but is blocked"
          },
          "401": {
            "description": "Unauthorized: user doesn't exists or is not authenticated"
          },
          "400": {
            "description": "Bad Request: one of required params is not provided."
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending a refresh-token, related access token is invalidated</p>",
        "parameters": [
          {
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "refresh_token"
              ],
              "properties": {
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request: refresh_token is not provided."
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "authentication"
        ],
        "description": "<p>By sending a valid refresh-token, a new access token is provided</p>",
        "parameters": [
          {
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "refresh_token"
              ],
              "properties": {
                "refresh_token": {
                  "description": "Refresh token",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "access_token"
              ],
              "properties": {
                "access_token": {
                  "description": "Access token",
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: there aren't active sessions with provided refresh token"
          },
          "400": {
            "description": "Bad Request: refresh_token is not provided."
          }
        }
      }
    }
  }
}