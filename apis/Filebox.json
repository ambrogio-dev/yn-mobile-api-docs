{
  "swagger": "2.0",
  "info": {
    "title": "Filebox",
    "description": "<p>Description TODO</p>"
  },
  "host": "alpha.youneed.it/mobile",
  "basePath": "/v2",
  "schemes": [
    "https"
  ],
  "paths": {
    "/filebox": {
      "get": {
        "description": "<p>Get the list of files and directories under the root folder or a given parent.</p>",
        "parameters": [
          {
            "in": "headers",
            "name": "Authorization",
            "type": "string",
            "description": "The access token in the format: <b>Bearer <token></b>",
            "required": true
          },
          {
            "in": "query",
            "name": "parent",
            "type": "integer",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "required": [
                "id",
                "name",
                "isDirectory",
                "creationDate",
                "creator",
                "lastUpdate"
              ],
              "properties": {
                "id": {
                  "description": "Item Id",
                  "type": "integer"
                },
                "name": {
                  "description": "Logical item's name",
                  "type": "string"
                },
                "stored": {
                  "description": "Phisical file's name (null if it's a direcotry)",
                  "type": "string"
                },
                "isDirectory": {
                  "description": "True if item is a directory, false if it's a file",
                  "type": "boolean"
                },
                "size": {
                  "description": "File's size (null if it's a direcotry)",
                  "type": "integer"
                },
                "mime": {
                  "description": "File's mimetype (null if it's a direcotry)",
                  "type": "string"
                },
                "creationDate": {
                  "description": "Item's creation date",
                  "type": "integer"
                },
                "creator": {
                  "description": "User (id) who created the file/directory",
                  "type": "integer"
                },
                "lastUpdate": {
                  "description": "Item's last updating date",
                  "type": "integer"
                },
                "lastUpdater": {
                  "description": "User (id) who updated the file/directory last time",
                  "type": "integer"
                },
                "parent": {
                  "description": "Item's parent Id",
                  "type": "integer"
                },
                "blockingUser": {
                  "description": "User (id) who blocked the file in order to deny changes",
                  "type": "integer"
                },
                "publicUrl": {
                  "description": "Public download url (null if it's a direcotry or not public)",
                  "type": "string"
                },
                "isShared": {
                  "description": "True if the item is shared",
                  "type": "boolean"
                }
              }
            }
          },
          "404": {
            "description": "Not found: if parent is passed but it's not exists"
          },
          "403": {
            "description": "Not authorized: if parent is passed but the user doesn't have read permission on it."
          }
        }
      }
    }
  }
}